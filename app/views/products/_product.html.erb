<div class="product-list col-md-4 col-xs-12">
    <div class="product-name">
      <%= link_to product.name, product, class: "button-text"   %>
    </div>
    <div class="product-picture" data-toggle="tooltip" data-placement="top" title="<%= product.description %>"><%= image_tag(product.image_url, class: 'list_image_index') %>
    </div>
    <div class="product-price">
      <%= humanized_money_with_symbol product.price %>
    </div>
  <% if current_user && current_user.admin? %>
    <div class="btn-group">
        <%= link_to 'Show', product, class: "btn btn-default btn-xs" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default btn-xs" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default btn-xs" %>
    </div>
  <% end %>
</div>

