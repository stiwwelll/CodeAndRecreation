<p id="notice"><%= notice %></p>

<h1>Our Bikes</h1>
  <div id="main" class="container">
    <div class="row">
        <% @products.each do |product| %>
        <div class="product-list col-md-4 col-xs-12">
        <div class="product-name"><%= product.name %> </div>
        <div class="product-picture"><%= image_tag(product.image_url, :class => 'list_image') %>
        </div>
        <div class="product-price"><%= product.price %>&#8364</div>
        <div class="btn-group">
          <button type="button" class="btn btn-success btn-xs"><%= link_to 'Show', product, :class => "button-text" %></button>
          <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_product_path(product), :class => "button-text"  %></button>
          <button type="button" class="btn btn-danger btn-xs"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, :class => "button-text"  %></button>
        </div>
      </div>
      <% end %>
    </div>
    <div class="new-product row">
      <div class="col-md-2 col-xs-12">
        <button type="button" class="btn btn-success"><%= link_to 'New Product', new_product_path, :class => "button-text" %></button>
      </div>
    </div>
  </div>

