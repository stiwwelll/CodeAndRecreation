<p id="notice"><%= notice %></p>

<h1>Our Bikes</h1>
<div class="wrapper cf">
  <button type="button" class="btn btn-success"><%= link_to 'New Product', new_product_path, :class => "button_text"  %></button>
  <table>
    <thead>
     <% @products.each do |product| %>
        <tr>
          <td class="table_product"><%= product.name %>
            <div class="btn-group">
              <button type="button" class="btn btn-success btn-xs"><%= link_to 'Show', product, :class => "button_text" %></button>
              <button type="button" class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_product_path(product), :class => "button_text"  %></button>
              <button type="button" class="btn btn-danger btn-xs"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, :class => "button_text"  %></button>
            </div>
          </td>
          <td class="table_description"><%= product.description %></td>
          <td class="table_picture"><%= image_tag(product.image_url, :class => 'list_image') %></td>
        </tr>
      <% end %>
    </thead>
  </table>
</div>

