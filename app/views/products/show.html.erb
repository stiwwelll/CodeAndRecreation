<p id="notice"><%= notice %></p>
<div class="row">
  <div class="show_details col-md-4 col-xs-12">
    <h3><strong>Name</strong></h3>
    <p><%= @product.name %></p>

    <h3><strong>Description</strong></h3>
    <p><%= @product.description %></p>

    <h3><strong>Color</strong></h3>
    <p><%= @product.color %></p>

    <h3><strong>Price</strong></h3>
    <p><%= @product.price %>&#8364</p>

    <div class="btn-group">
    <%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-default btn-xs" %>
    <%= link_to 'Back', products_path, :class => "btn btn-default btn-xs" %>
    </div>
  </div>
  <div class="col-md-8 col-xs-12">
    <%= image_tag(@product.image_url, :class => 'list_image_show clearfix') %>
  </div>
</div>


