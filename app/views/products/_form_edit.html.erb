<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="field">
      <%= f.label :name, :class => "form-label" %><br>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :description, :class => "form-label" %><br>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :image_url, :class => "form-label" %><br>
      <%= f.text_field :image_url, :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :color, :class => "form-label" %><br>
      <%= f.text_field :color, :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :price, :class => "form-label" %><br>
      <%= f.text_field :price, :class => "form-control" %>
    </div>
    <div>
      <%= f.submit "Update Product", class: "btn btn-default update-button" %>
    </div>
    <%= link_to 'Show', @product, class: "button-text" %>
    <%= link_to 'Back', products_path, class: "button-text" %>
  </div>
</div>
<% end %>
