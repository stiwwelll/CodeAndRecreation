<div class="row signup-field center-block">
  <div class="col-md-12 col-xs-12">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="btn-group">
          <%= f.submit "Update User", class: "btn btn-default" %>
          <%= link_to "Change your password", edit_user_registration_path, class: "btn btn-default" %>
      </div>
    <% end %>
      <div class="alternative-user-button">
        <%= link_to 'Show', @user, class: "button-text" %>
        <%= link_to 'Back', users_path, class: "button-text" %>
      </div>
  </div>
</div>

